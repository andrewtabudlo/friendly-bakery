<div class="p-3">
  <h1 class="text-center"><%= @type %></h1>
</div>

<div class="row justify-content-sm-center">
  <% settings.friendly_bakery.cookies.each_key do |key| %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src=<%= settings.friendly_bakery.cookies[key].image %> alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= settings.friendly_bakery.cookies[key].name %></h5>
      <p class="card-text"><%= settings.friendly_bakery.cookies[key].description %></p>
      <a href="#" class="btn btn-primary bg-info">Add to cart</a>
    </div>
      <ul class="list-group list-group-flush">
      <li class="list-group-item">Price: $<%= settings.friendly_bakery.cookies[key].price %></li>
      <li class="list-group-item">stock: <%= settings.friendly_bakery.cookies[key].qty %></li>
    </ul>
  </div>

  <% end %>
</div>